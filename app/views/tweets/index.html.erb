<p id="notice"><%= notice %></p>

<h1>Tweets!</h1>

<div class="container">
<table class="table">
  <thead>
    <tr>
      <th>Usuario</th>
      <th>Contenido</th>
      <th>Likes</th>
      <th>Retweet</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.user %></td>
        <td><%= tweet.content %></td>
        <td><%= tweet.likes %></td>
        <td><%= tweet.retweets %></td>
        <% if current_user %>
          <td><%= link_to 'Show', tweet %></td>
          <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
          <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= paginate @tweets %>
<%= link_to 'New Tweet', new_tweet_path %>
</div>

